{{!< ../default}}

<link rel="stylesheet" type="text/css" href="{{asset "custom/bootstrap.min.css"}}" />

<header class="site-header outer {{#if @blog.cover_image}}" style="background-image: url({{@blog.cover_image}}){{else}}no-cover{{/if}}">
    <div class="inner">
        <div class="site-header-content">
            <h1 class="site-title">
                {{#if @blog.logo}}
                    <img class="site-logo" src="{{@blog.logo}}" alt="{{@blog.title}}" />
                {{else}}
                    {{@blog.title}}
                {{/if}}
            </h1>
            <h2 class="site-description">{{@blog.description}}</h2>
        </div>
        {{> "site-nav"}}
    </div>
</header>

{{!-- The main content area --}}
<main id="site-main" class="site-main outer" role="main">
    <div class="inner">

        {{#if isRequest}}
        <h1>Anfrage</h1>
        {{else}}
        <h1>Kontakt</h1>
        {{/if}}

    {{#if isSuccess}}
        <div>
            Danke für Ihre Nachricht. Wir melden uns in Kürze.
        </div>
    {{else}}


    <form method="post">

        {{#if hasValidationError}}
            <div style="color: red">
                Bitte füllen Sie alle Pflichtfelder aus!
            </div>
        {{/if}}
        {{#if hasSendError}}
            <div style="color: red">
                Fehler beim Versenden der Nachricht. Bitte überprüfen Sie die angegebene Email-Adresse.
            </div>
        {{/if}}
        <div class="form-group">
            <label>Name *</label>
            <input class="form-control" value="{{name}}" name="name">
        </div>
        <div class="form-group">
            <label>EMail-Adresse *</label>
            <input class="form-control" value="{{email}}" name="email">
        </div>
        <div class="form-group">
            <label>Firma (Optional)</label>
            <input class="form-control" value="{{company}}" name="company">
        </div>
        <div class="form-group">
            <label>Betreff *</label>
            <input class="form-control" value="{{subject}}" name="subject">
        </div>
        <div class="form-group">
            <label>Text *</label>
            <textarea class="form-control" name="body" rows="10">{{text}}</textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Senden" class="btn btn-primary">
        </div>

        {{#if isRequest}}
        <input type="hidden" name="isRequest" value="1">
        {{/if}}


    </form>
    
    {{/if}}
        <p>&nbsp;</p>
        <p>&nbsp;</p>
    </div>
</main>